{
  "name": "fiskeoversikt-client",
  "version": "1.0.0",
  "description": "Client for showing fiskeoversikt",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/computerlove/Fiskeoversikt"
  },
  "main": "src/main/web/index.js",
  "scripts": {
    "watch-css": "nodemon -q -I -w src/main/web/style/app.less --ext less --exec 'npm run build-css'",
    "watch-js": "webpack --progress --colors --watch",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "lessc src/main/web/style/app.less target/classes/assets/bundle.css",
    "build-js": "webpack",
    "build": "npm run build-css & npm run build-js",
    "preprocess:autoprefixer": "postcss --use autoprefixer -o src/main/webapp/static/bundle.css src/main/webapp/static/bundle.css",
    "lint": "./node_modules/.bin/eslint ."
  },
  "author": "Marvin Bredal Lillehaug",
  "license": "Apache-2.0",
  "dependencies": {
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "webpack": "^1.13.1",
    "eslint": "^0.21.2",
    "eslint-plugin-react": "^2.3.0",
    "nodemon": "^1.9.2",
    "less" : "^2.7.1"
  }
}
